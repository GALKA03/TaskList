{
  "compilerOptions": {
    "target": "es6",
    "moduleResolution": "node",
    "module": "NodeNext",
    "baseUrl": "src",
    "outDir": "dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,   // Add this line
    "emitDecoratorMetadata": true     // Add this line
  },
  "include": ["src/**/*"],
  "exclude": ["src/types/*.ts", "node_modules", ".vscode"]
}
